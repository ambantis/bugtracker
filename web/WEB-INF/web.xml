<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.x460dot11.servlet.ServletLogin</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>New Bug</servlet-name>
        <jsp-file>/WEB-INF/inputNewBug.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>New Bug</servlet-name>
        <url-pattern>/inputNewBug.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Welcome Page</servlet-name>
        <jsp-file>/WEB-INF/welcome.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Welcome Page</servlet-name>
        <url-pattern>/welcome.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Display All Bugs</servlet-name>
        <jsp-file>/WEB-INF/displayAllBugs.jsp</jsp-file>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Display All Bugs</servlet-name>
        <url-pattern>/displayAllBugs.do</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Process New Bug</servlet-name>
        <jsp-file>/WEB-INF/processNewBug.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Process New Bug</servlet-name>
        <url-pattern>/processNewBug.do</url-pattern>
    </servlet-mapping>

</web-app>

