<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

  <!-- ===================================================================-->
  <!-- CONTEXT PARAMETERS                                                 -->
  <!-- ===================================================================-->

  <context-param>
    <param-name>db-driver</param-name>
    <param-value>org.postgresql.Driver</param-value>
  </context-param>

  <context-param>
    <param-name>db-url</param-name>
    <param-value>jdbc:postgresql://54.245.109.81:5432/bugdb</param-value>
  </context-param>

  <context-param>
    <param-name>db-user</param-name>
    <param-value>roach</param-value>
  </context-param>

  <context-param>
    <param-name>db-password</param-name>
    <param-value>motel</param-value>
  </context-param>

  <!-- ===================================================================-->
  <!-- CONTEXT LISTENER                                                   -->
  <!-- ===================================================================-->

  <listener>
    <listener-class>com.x460dot11.listener.ContextListener</listener-class>
  </listener>

  <!-- ===================================================================-->
  <!-- SERVLET DEFINITIONS                                                -->
  <!-- ===================================================================-->

  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>com.x460dot11.servlet.Login</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Welcome Page</servlet-name>
    <jsp-file>/WEB-INF/welcome.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Welcome Page</servlet-name>
    <url-pattern>/welcome.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>New Bug</servlet-name>
    <jsp-file>/WEB-INF/inputNewBug.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>New Bug</servlet-name>
    <url-pattern>/inputNewBug.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Display All Bugs</servlet-name>
    <jsp-file>/WEB-INF/displayAllBugs.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Display All Bugs</servlet-name>
    <url-pattern>/displayAllBugs.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Process New Bug</servlet-name>
    <servlet-class>com.x460dot11.servlet.ProcessNewBug</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Process New Bug</servlet-name>
    <url-pattern>/processNewBug.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Display A Bug</servlet-name>
    <servlet-class>com.x460dot11.servlet.DisplayBug</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Display A Bug</servlet-name>
    <url-pattern>/displayBug.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Edit a Bug</servlet-name>
    <jsp-file>/WEB-INF/editBug.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Edit a Bug</servlet-name>
    <url-pattern>/editBug.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ProcessEditBug</servlet-name>
    <servlet-class>com.x460dot11.servlet.ProcessEditBug</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProcessEditBug</servlet-name>
    <url-pattern>/processEditBug.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ProcessCloseBug</servlet-name>
    <servlet-class>com.x460dot11.servlet.ProcessCloseBug</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProcessCloseBug</servlet-name>
    <url-pattern>/processCloseBug.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Display Close Bug</servlet-name>
    <jsp-file>/WEB-INF/closeBug.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Display Close Bug</servlet-name>
    <url-pattern>/closeBug.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Exit Page</servlet-name>
    <jsp-file>/WEB-INF/exit.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Exit Page</servlet-name>
    <url-pattern>/exit.do</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Invalidate Session</servlet-name>
    <servlet-class>com.x460dot11.servlet.InvalidateSession</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Invalidate Session</servlet-name>
    <url-pattern>/invalidate.do</url-pattern>
  </servlet-mapping>

  <!-- ===================================================================-->
  <!-- SESSION CONFIG                                                     -->
  <!-- ===================================================================-->

  <session-config>
    <session-timeout>15</session-timeout>
  </session-config>

